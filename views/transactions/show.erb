<h1>Transaction no. <%=@transaction.id%></h1>

<table class="paleOrangeRows">
  <tr>
    <th>Amount</th>
    <th>Merchant</th>
    <th>Tag</th>
    <th>Date</th>
    <th colspan="2">Action</th>
  </tr>
  <tr>
    <td><%=@transaction.amount%></td>
    <td>
      <%if @merchant != nil%>
        <%=@merchant.name%>
      <% else %>
        <%="Unknown"%>
      <%end%>
    </td>
    <td>
      <%if @tag != nil%>
        <%=@tag.name%>
      <%else%>
        <%="Unknown"%>
      <%end%>
    </td>
    <td><%=@transaction.transaction_date%></td>
    <td>
      <a href="/transactions/<%=@transaction.id%>/edit">Edit</a>
    </td>
    <td><form action="<%=@transaction.id%>/delete" method="post">
      <input type="submit" value="Delete Transaction">
    </form></td>
  </tr>
</table>
