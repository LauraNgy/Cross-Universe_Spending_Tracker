<h2>Transaction no. <%=@transaction.id%></h2>

<table class="paleOrangeRows">
  <thead>
  <tr>
    <th>Amount</th>
    <th>Merchant</th>
    <th>Tag</th>
    <th>Date</th>
    <th colspan="2">Action</th>
  </tr>
</thead>
  <tr>
    <td><%=@transaction.amount%></td>
    <td>
      <%if @merchant != nil%>
        <%=@merchant.name%>
      <% else %>
        <%="Unknown"%>
      <%end%>
    </td>
    <td>
      <%if @tag != nil%>
        <%=@tag.name%>
      <%else%>
        <%="Unknown"%>
      <%end%>
    </td>
    <td><%=@transaction.transaction_date%></td>
    <td>
      <a href="/transactions/<%=@transaction.id%>/edit">Edit Transaction</a>
    </td>
    <td><form action="<%=@transaction.id%>/delete" method="post">
      <input class="form-bttn" type="submit" value="Delete Transaction">
    </form></td>
  </tr>
</table>
