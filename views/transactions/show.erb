<h1>Transaction no. <%=@transaction.id%></h1>
<ul>
  <li>Amount: <%=@transaction.amount%></li>
  <li>Merchant: <%=@merchant.name%></li>
  <li>Tag: <%=@tag.name%></li>
  <li>Date: <%=@transaction.transaction_date%></li>
</ul>

<form action="<%=@transaction.id%>/edit" method="get">
  <input type="submit" value="Edit Transaction">
</form>
<form action="<%=@transaction.id%>" method="post">
  <input type="submit" value="Delete Transaction">
</form>
