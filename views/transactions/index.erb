<h1>Your budget is <%= @account.budget %> <%= @account.currency %> </h1>
<div class="content">
  <h1>Here are your transactions for <%= @account.currency %></h1>
  <ul>
    <% for transaction in @transactions %>
    <li> <%= transaction.amount %> | <%= transaction.description %> |  <%= transaction.transaction_date %></li>
    <form action="transactions/<%=transaction.id%>" method="get">
      <input type="submit" value="Show Details">
    </form>
    <%end%>
  </ul>
  <!-- <button> Add new transaction </button> -->
  <form action="../transactions/new/<%=@account.id%>" method="get">
    <input type="submit" value="Add New Transaction">
  </form>
</div>
